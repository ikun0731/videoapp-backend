<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.videoapp.mapper.FishTransactionMapper">

    <insert id="insert" parameterType="com.example.videoapp.entity.FishTransaction"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO fish_transactions (user_id, video_id, amount, created_at)
        VALUES (#{userId}, #{videoId}, #{amount}, #{createdAt})
    </insert>

    <delete id="deleteByVideoId">
        DELETE FROM fish_transactions WHERE video_id = #{videoId}
    </delete>
</mapper>